{
  "name": "silpo-tech/openswoole-bundle",
  "type": "symfony-bundle",
  "description": "Symfony OpenSwoole Bundle",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "upscale/swoole-blackfire": "^4.0",
    "symfony/dependency-injection": "^6.0|^7.0",
    "symfony/config": "^6.0|^7.0",
    "symfony/http-kernel": "^6.0|^7.0",
    "symfony/console": "^6.0|^7.0",
    "openswoole/core": "^22.1",
    "monolog/monolog": "^2.0|^3.0",
    "symfony/messenger": "^6.0|^7.0",
    "symfony/event-dispatcher": "^6.0|^7.0",
    "symfony/stopwatch": "^7.2",
    "symfony/psr-http-message-bridge": "^7.2",
    "nyholm/psr7": "^1.8",
    "symfony/yaml": "^7.2"
  },
  "suggest": {
    "ext-openswoole": "^22.0"
  },
  "require-dev": {
    "openswoole/ide-helper": "^22.0",
    "phpunit/phpunit": "^11.2",
    "symfony/doctrine-bridge": "^7.2",
    "sentry/sentry": "^4.10",
    "php-amqplib/php-amqplib": "^3.7",
    "doctrine/orm": "^3.3",
    "doctrine/mongodb-odm": "^2.11",
    "phpstan/phpstan": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "config": {
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-4": {
      "OpenSwooleBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OpenSwooleBundle\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test:coverage": [
      "php -d extension=pcov.so -d pcov.enabled=1 bin/phpunit --coverage-text --coverage-html ./reports/coverage --colors=never --coverage-cobertura=./reports/coverage/cobertura.xml --coverage-clover=./reports/coverage/clover.xml --log-junit=./reports/coverage/junit.xml"
    ],
    "test:run": [
      "php bin/phpunit --testdox"
    ],
    "test:debug": {
      "command": "debug bin/phpunit --color=always"
    }
  }
}